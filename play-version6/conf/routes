# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

GET     /DProblem                   controllers.DProblemController.index
GET     /DProblem/:path             controllers.DProblemController.view(path: String)


# First Rudimentary Data Browser
GET     /animations/:collection         controllers.AnimationController.browseCollection(collection: String)
GET     /animations/:collection/:filename.json    controllers.AnimationController.getAnimationJson(collection: String, filename:String)
GET     /animations/:collection/:filename     controllers.AnimationController.getAnimation(collection: String, filename:String)
POST    /animations/:collection/:filename     controllers.AnimationController.postAnimation(collection: String, filename:String)

# Integration tests for Nashorn Javascript Excution
GET     /test/nashorn/test1            controllers.NashornTestController.nashornTest1()
GET     /test/nashorn/test2            controllers.NashornTestController.nashornTest2()
GET     /test/nashorn/test3            controllers.NashornTestController.nashornTest3()
GET     /test/nashorn/test4            controllers.NashornTestController.nashornTest4()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
