# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

GET     /DProblem                   controllers.DProblemController.index
GET     /DProblem/:path             controllers.DProblemController.view(path: String)


# First Rudimentary Data Browser
GET     /animations/:collection         controllers.AnimationController.browseCollection(collection: String)
GET     /animations/:collection/:filename     controllers.AnimationController.getAnimation(collection: String, filename:String)
POST    /animations/:collection/:filename     controllers.AnimationController.postAnimation(collection: String, filename:String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
